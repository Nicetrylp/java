package com.pinhong;

import java.util.Scanner;

/**
 * 
 * 新闻类
 * 属性;	
		时间 time	内容:content	作者:author	标题:title
	方法:
		增删改查
 *
 */
public class News {
	static String time;			//时间
	static String content;		//内容
	static String author;		//作者
	static String title;		//标题
	
	public News() {
		super();

	}
	
	public static String getTime() {
		return time;
	}

	public static void setTime(String time) {
		News.time = time;
	}

	public static String getContent() {
		return content;
	}

	public static void setContent(String content) {
		News.content = content;
	}

	public static String getAuthor() {
		return author;
	}

	public static void setAuthor(String author) {
		News.author = author;
	}

	public static String getTitle() {
		return title;
	}

	public static void setTitle(String title) {
		News.title = title;
	}

	public void add() {
		News news = new News();
		Scanner scanner = new Scanner(System.in);
		System.out.println("请输入新闻的标题:");
		String title = scanner.nextLine();
		this.title = title;
		setTitle(title);
		System.out.println("请输入新闻的内容:");
		String content = scanner.nextLine();
		//this.content = content;
		setContent(content);
		System.out.println("请输入 新闻的作者");
		String author = scanner.nextLine();
		setAuthor(author);
		System.out.println("请输入新闻的时间");
		String time = scanner.nextLine();
		setTime(time);
	}
	public void look() {
		System.out.println(getTime());
		System.out.println(getTitle());
		System.out.println(getAuthor());
		System.out.println(getContent());
	}
}
