package com.pinhong;

import java.util.Arrays;
import java.util.Scanner;

/**
 * 
 * 属性:
 * 		news[] 相当于数据库	静态
 * 
 * 方法:
		添加,修改,删除,查询(增删改查)
 *
 */
public class NewOperation {
	static News[]news = new News[1];	
	
	public static void addNews() {
		News New = new News();
		Scanner scanner = new Scanner(System.in);
		System.out.println("请输入新闻的标题:");
		String title = scanner.nextLine();
		New.setTitle(title);
		//setTitle(title);
		System.out.println("请输入新闻的内容:");
		String content = scanner.nextLine();
		New.setContent(content);
		//setContent(content);
		System.out.println("请输入 新闻的作者");
		String author = scanner.nextLine();
		New.setAuthor(author);
		//setAuthor(author);
		System.out.println("请输入新闻的时间");
		String time = scanner.nextLine();
		//setTime(time);
		New.setTime(time);
		for(int i = 0;i < news.length;++i) {
			if(news[i] == null) {
				news[i] = New;
				
				//return;
			}else {
				System.out.println(news[i]);
				System.out.println(news[i].getTime());
				System.out.println(news[i].getTitle());
				System.out.println(news[i].getAuthor());
				System.out.println(news[i].getContent());
			}
			
		}
		news = Arrays.copyOf(news, news.length + 5);
		news[news.length-5] = New;
	}
	
	public void amendNews() {
		
	}
	
	public void deleteNews() {
		
	}
	
	public static void inquireNews() {
		for(int i=0;i<news.length;++i)
		{
			if(news[i]!=null)
			{
				System.out.println(news[i]);
			}
		}
	}
}
